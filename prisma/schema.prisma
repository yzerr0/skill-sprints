generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String      @id @default(cuid())
  email              String      @unique
  passwordHash       String
  createdAt          DateTime    @default(now())

  skillPlans         SkillPlan[]
  sprintCompletions  SprintCompletion[]
}

model SkillPlan {
  id           String      @id @default(cuid())
  user         User        @relation(fields: [userId], references: [id])
  userId       String
  skillName    String
  description  String?
  level        String      // "beginner" | "intermediate"
  dailyMinutes Int
  totalDays    Int
  planRaw      Json        // user's interpreted plan (can be modified)
  createdAt    DateTime    @default(now())

  sprintDays   SprintDay[]
}

model SprintDay {
  id                 String     @id @default(cuid())
  skillPlan          SkillPlan  @relation(fields: [skillPlanId], references: [id])
  skillPlanId        String
  title              String
  dayNumber          Int
  estimatedMins      Int

  instructions       Json
  reflectionQuestion String

  completions        SprintCompletion[]
}

model SprintCompletion {
  id           String     @id @default(cuid())
  user         User       @relation(fields: [userId], references: [id])
  userId       String
  sprintDay    SprintDay  @relation(fields: [sprintDayId], references: [id])
  sprintDayId  String
  completedAt  DateTime   @default(now())
  rating       Int?    
  notes        String?
}